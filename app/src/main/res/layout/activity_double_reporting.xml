<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_bg_grey">

    <include layout="@layout/include_toolbar"></include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_double_report"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="@dimen/len_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/len_16"
            android:gravity="center"
            android:text="请输入要报到的社区"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/len_16" />

        <EditText
            android:id="@+id/edt_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/len_16"
            android:textColor="@color/secondary_text"
            android:hint="请输入社区名称"
            android:layout_margin="@dimen/len_16"/>

        <TextView
            android:id="@+id/tv_choose_community"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:text="选择社区"
            android:textColor="@color/orange_500"
            android:textSize="@dimen/len_16"
            android:layout_marginRight="@dimen/len_16"/>

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/len_16"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/len_44"
            android:layout_marginLeft="@dimen/len_16"
            android:layout_marginRight="@dimen/len_16"/>

    </LinearLayout>

</LinearLayout>