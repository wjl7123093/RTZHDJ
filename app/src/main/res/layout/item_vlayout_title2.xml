<?xml version="1.0" encoding="utf-8"?>
<!--
 * item_vlayout_title2.xml vlayout 通栏布局(我的 - 标题栏)
 *
 * @author Fred_W
 * @version v1.0.0(1)
 *
 * @crdate 2018-2-1
 * @update 2018-2-2     修改了UI（背景色，marginTop）
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/len_12"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/len_16"
        android:paddingRight="@dimen/len_16"
        android:paddingTop="@dimen/len_10"
        android:paddingBottom="@dimen/len_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_18"
            android:textColor="@color/primary_text"
            android:text="我的党费"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_study_scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_22"
            android:textColor="@color/primary_dark"
            android:text="17"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/len_20"/>
        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/len_16"
            android:layout_height="@dimen/font_16"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="bottom"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></View>

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_bg_mine_btn"
            android:gravity="center_vertical"
            android:text="怎样获取积分?"
            android:textColor="@color/orange_500"
            android:textSize="@dimen/font_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_bg_grey"
        android:layout_marginLeft="@dimen/len_16"></View>

</LinearLayout>
