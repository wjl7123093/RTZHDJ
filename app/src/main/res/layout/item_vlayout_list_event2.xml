<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/white">

    <!-- 截止日期 -->
    <TextView
        android:id="@+id/tv_deadtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_14"
        android:textColor="@color/secondary_text"
        android:text="报名截止：2018-1-31"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/len_16"
        android:layout_marginLeft="@dimen/len_16"/>
    <!-- 状态 -->
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_14"
        android:textColor="@color/white"
        android:text="进行中"
        android:background="@color/orange_500"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/len_10"
        android:padding="@dimen/len_6"/>
    <!-- 活动图片 -->
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/len_100"
        android:layout_height="@dimen/len_60"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginBottom="@dimen/len_16"
        android:background="@mipmap/ic_launcher"/>
    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/font_14"
        android:textColor="@color/primary_text"
        android:layout_alignTop="@id/iv_image"
        android:layout_toRightOf="@id/iv_image"
        android:layout_marginLeft="@dimen/len_10"
        android:text="文章标题。。。。。。。。"/>
    <!-- 参与人数 -->
    <TextView
        android:id="@+id/tv_join_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_14"
        android:textColor="@color/secondary_text"
        android:layout_alignBottom="@id/iv_image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/len_10"
        android:text="参与人数:1054/18"/>
    <!-- 点赞数 -->
    <TextView
        android:id="@+id/tv_star_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_14"
        android:textColor="@color/primary_text"
        android:layout_alignBottom="@id/iv_image"
        android:layout_toRightOf="@id/iv_image"
        android:layout_marginLeft="@dimen/len_10"
        android:text="222"
        android:visibility="gone"/>
    <!-- 评论数 -->
    <TextView
        android:id="@+id/tv_comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_14"
        android:textColor="@color/primary_text"
        android:layout_alignBottom="@id/iv_image"
        android:layout_toRightOf="@id/tv_star_num"
        android:layout_marginLeft="@dimen/len_6"
        android:text="111"
        android:visibility="gone"/>

</RelativeLayout>
