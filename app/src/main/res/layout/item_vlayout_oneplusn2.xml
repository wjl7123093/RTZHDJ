<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/len_12"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="182dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="0.5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/bg_join_love_hourse"
            android:background="#cc0100"/>
    </LinearLayout>
    <!--<View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/white"></View>-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="182dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginLeft="0.5dp">
        <include layout="@layout/item_vlayout_wish"
            android:id="@+id/include_wish1"></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"></View>
        <include layout="@layout/item_vlayout_wish"
            android:id="@+id/include_wish2"></include>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"></View>
        <include layout="@layout/item_vlayout_wish"
            android:id="@+id/include_wish3"></include>
    </LinearLayout>

</LinearLayout>
