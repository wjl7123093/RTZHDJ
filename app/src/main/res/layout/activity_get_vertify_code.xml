<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar"></include>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请输入189****8888收到的短信验证码"
        android:textSize="@dimen/font_16"
        android:textColor="@color/colorPrimary"
        android:layout_margin="@dimen/len_16"/>

    <!-- 输入验证码 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16">

        <net.qiujuer.genius.ui.widget.EditText
            android:id="@+id/edt_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="@dimen/font_16"
            android:textColor="@color/primary_text"/>

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_get_code"
            android:layout_width="120dp"
            android:layout_height="@dimen/len_40"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/font_14"
            android:background="@color/colorPrimary"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/len_4"/>

    </RelativeLayout>

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"
        android:textSize="@dimen/font_16"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_margin="@dimen/len_16"/>


</LinearLayout>