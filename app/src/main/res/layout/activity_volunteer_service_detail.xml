<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/app_bg_grey">

    <include layout="@layout/include_toolbar"></include>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:background="@color/white"
        android:text="XXXXX志愿服务名称"
        android:textSize="@dimen/font_16"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        android:paddingLeft="@dimen/len_16"
        android:gravity="center_vertical"/>

    <!-- 报名日期 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/len_36"
        android:layout_marginTop="@dimen/len_10">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="报名日期"
            android:textSize="@dimen/font_16"
            android:textColor="@color/secondary_text"
            android:gravity="center_vertical|right"/>
        <TextView
            android:id="@+id/tv_enroll_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018-02-03 截止"
            android:textSize="@dimen/font_16"
            android:textColor="@color/primary_text"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/len_16"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange_800"
            android:orientation="vertical"
            android:padding="@dimen/len_4"
            android:gravity="center_horizontal"
            android:layout_marginRight="@dimen/len_10">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参与可获"
                android:textSize="@dimen/font_10"
                android:textColor="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/len_4"
                android:layout_marginBottom="@dimen/len_4"></View>
            <TextView
                android:id="@+id/tv_scores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_12"
                android:textColor="@color/white"
                android:text="4"
                android:drawableRight="@mipmap/ic_study_money"
                android:drawablePadding="@dimen/len_2"/>
        </LinearLayout>
    </LinearLayout>

    <!-- 活动日期 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/len_36">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="活动日期"
            android:textSize="@dimen/font_16"
            android:textColor="@color/secondary_text"
            android:gravity="center_vertical|right"/>
        <TextView
            android:id="@+id/tv_event_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2018-02-04 至 2018-03-01"
            android:textSize="@dimen/font_16"
            android:textColor="@color/primary_text"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/len_16"/>
    </LinearLayout>

    <!-- 活动地点 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/len_36">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="活动地点"
            android:textSize="@dimen/font_16"
            android:textColor="@color/secondary_text"
            android:gravity="center_vertical|right"/>
        <TextView
            android:id="@+id/tv_event_site"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="XX市五一大厦一楼XX体育文化中心第二活动室"
            android:textSize="@dimen/font_16"
            android:textColor="@color/primary_text"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/len_16"
            android:layout_marginRight="@dimen/len_10"/>
    </LinearLayout>

    <!-- 报名人数 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/len_36">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="报名人数"
            android:textSize="@dimen/font_16"
            android:textColor="@color/secondary_text"
            android:gravity="center_vertical|right"/>
        <TextView
            android:id="@+id/tv_enrollment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12/30"
            android:textSize="@dimen/font_16"
            android:textColor="@color/primary_text"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/len_16"/>
    </LinearLayout>

    <!-- 评分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="@dimen/len_36">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="评分"
            android:textSize="@dimen/font_16"
            android:textColor="@color/secondary_text"
            android:gravity="center_vertical|right"/>
        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            style="@style/GlimmerRatingBar"
            android:numStars="5"
            android:rating="1.5"
            android:stepSize="0.5"
            android:layout_marginLeft="@dimen/len_16"/>
        <TextView
            android:id="@+id/tv_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5.0分"
            android:textSize="@dimen/font_16"
            android:textColor="@color/primary_text"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/len_8"/>
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        app:tabIndicatorColor="@color/tab_selected_color"
        app:tabSelectedTextColor="@color/tab_selected_color"
        app:tabTextAppearance="@style/TextAppearanceHome"
        app:tabTextColor="#ff222222" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_bg_grey"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="点赞"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_16"
            android:background="@color/white"/>
        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_is_over"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="已结束"
            android:textColor="@color/white"
            android:textSize="@dimen/font_16"
            android:background="@color/colorPrimary"/>
    </LinearLayout>

</LinearLayout>