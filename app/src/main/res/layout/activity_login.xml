<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_login">

    <com.mytv.rtzhdj.mvp.ui.widget.ClearEditText
        android:id="@+id/edt_acc"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginTop="260dp"
        android:background="@drawable/sp_bg_login_edt"
        android:hint="请输入账号"
        android:textColorHint="@color/app_text_color_hint"
        android:textSize="@dimen/font_14"
        android:textColor="@color/primary_text"
        android:drawablePadding="10dp"
        android:padding="@dimen/len_10"/>

    <com.mytv.rtzhdj.mvp.ui.widget.ClearEditText
        android:id="@+id/edt_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10"
        android:background="@drawable/sp_bg_login_edt"
        android:hint="请输入密码"
        android:textColorHint="@color/app_text_color_hint"
        android:textSize="@dimen/font_14"
        android:textColor="@color/primary_text"
        android:drawablePadding="10dp"
        android:padding="@dimen/len_10"
        android:inputType="textPassword"/>

    <!-- 登陆 -->
    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textSize="@dimen/font_16"
        android:textColor="@color/white"
        android:background="@mipmap/bg_login_btn"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginTop="@dimen/len_10"/>

    <!-- 注册/忘记密码 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginTop="@dimen/len_8">

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群众注册"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>




</LinearLayout>