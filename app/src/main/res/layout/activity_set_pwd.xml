<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar"></include>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请设置新的登录密码"
        android:textSize="@dimen/font_16"
        android:textColor="@color/primary_text"
        android:layout_margin="@dimen/len_16"/>

    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/edt_new_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="6-12位，不能与旧密码相同"
        android:inputType="textPassword"
        android:textSize="@dimen/font_16"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"/>

    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/edt_new_pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="再次输入，6-12位，不能与旧密码相同"
        android:inputType="textPassword"
        android:textSize="@dimen/font_16"
        android:textColor="@color/primary_text"
        android:layout_marginLeft="@dimen/len_16"
        android:layout_marginRight="@dimen/len_16"
        android:layout_marginTop="@dimen/len_16"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请将密码设置为 6-12 位，并且由数字和符号两种以上组合，不能与旧密码相同"
        android:textSize="@dimen/font_14"
        android:textColor="@color/secondary_text"
        android:layout_margin="@dimen/len_16"/>

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="完成"
        android:textSize="@dimen/font_16"
        android:textColor="@color/white"
        android:background="@color/grey_500"
        android:layout_margin="@dimen/len_16"/>

</LinearLayout>