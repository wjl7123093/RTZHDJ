<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rl_container"
    android:layout_marginLeft="@dimen/len_6"
    android:layout_marginRight="@dimen/len_6"
    app:cardCornerRadius="@dimen/len_6"
    app:cardElevation="@dimen/len_4"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:padding="@dimen/len_12">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_mine_cash"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/len_24"
            android:textColor="@color/primary_text"
            android:text="282.45"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/iv_image"
            android:layout_marginLeft="@dimen/len_20"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/len_12"
            android:textColor="@color/grey_400"
            android:text="本月应交党费"
            android:layout_toRightOf="@id/tv_money"
            android:layout_alignBottom="@id/tv_money"
            android:layout_marginLeft="@dimen/len_6"
            android:layout_marginBottom="@dimen/len_4"/>

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sp_bg_mine_btn_bank"
            android:textSize="@dimen/len_14"
            android:textColor="#0a7fe9"
            android:text="银行卡管理"
            android:layout_toRightOf="@id/iv_image"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/len_20"
            android:gravity="center"
            android:layout_marginBottom="@dimen/len_2"/>

        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/sp_bg_mine_btn_pay"
            android:textSize="@dimen/len_16"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="@dimen/len_4"
            android:text="立即缴费"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
