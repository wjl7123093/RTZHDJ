<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/rl_container"
    android:layout_marginLeft="@dimen/len_6"
    android:layout_marginRight="@dimen/len_6"
    app:cardCornerRadius="@dimen/len_6"
    app:cardElevation="@dimen/len_4"
    app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/len_10"
    android:orientation="vertical">



    <!-- 名称 -->
    <TextView
        android:id="@+id/tv_party_branch1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_16"
        android:textColor="@color/primary_text"
        android:text="壤塘县党政管理系统"
        android:gravity="center"
        android:layout_marginTop="@dimen/len_6"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_32"
            android:textColor="@color/colorPrimary"
            android:text="↓ "
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>
        <!-- 时间 -->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_14"
            android:textColor="@color/secondary_text"
            android:text="2018-02-26 17:05:32"
            android:layout_toRightOf="@id/tv_arrow"
            android:layout_marginTop="@dimen/len_10"/>
    </RelativeLayout>
    <!-- 时间 -->
    <TextView
        android:id="@+id/tv_party_branch2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_16"
        android:textColor="@color/accent"
        android:text="壤塘县委第一党支部"
        android:gravity="center"
        android:layout_marginBottom="@dimen/len_4"/>

</LinearLayout>
</android.support.v7.widget.CardView>