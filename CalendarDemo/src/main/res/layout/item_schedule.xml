<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="@dimen/space_3dp"
    android:layout_marginLeft="@dimen/space_3dp"
    android:layout_marginRight="@dimen/space_3dp"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:id="@+id/vScheduleHintBlock"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/purple_schedule_left_block"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tvScheduleState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10dp"
        android:background="@drawable/finish_schedule_hint"
        android:gravity="center"
        android:minWidth="50dp"
        android:padding="3dp"
        android:text="Finish"
        android:textColor="@color/color_schedule_finish"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tvScheduleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_20dp"
        android:layout_marginRight="@dimen/space_10dp"
        android:layout_marginTop="6dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="和老板吃饭"
        android:textColor="@color/color_schedule_title_text"
        android:textSize="@dimen/text_size_16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tvScheduleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space_12dp"
        android:ellipsize="end"
        android:textColor="#888"
        android:textSize="@dimen/text_size_14sp"
        android:text="2018-01-23 16:34:22"
        android:layout_alignLeft="@id/tvScheduleTitle"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/tvDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/space_12dp"
        android:ellipsize="end"
        android:textColor="#baa34e"
        android:textSize="@dimen/text_size_16sp"
        android:text="删除"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>

